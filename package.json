{
  "name": "hadoku-task-mobile",
  "version": "2.0.0",
  "description": "Hadoku Task Mobile - Android APK wrapper",
  "main": "index.js",
  "scripts": {
    "dev": "npx http-server www -p 8080 -o",
    "build": "echo 'No build needed - static HTML'",
    "sync": "npx cap sync",
    "open:android": "npx cap open android",
    "android:build": "cd android && gradlew assembleDebug",
    "android:install": "cd android && gradlew installDebug",
    "generate-icons": "node scripts/generate-icons.js",
    "bump-version": "node scripts/bump-version.js && git add android/app/build.gradle",
    "prepare": "husky",
    "release": "node scripts/release.js",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "keywords": [
    "capacitor",
    "android",
    "task-manager"
  ],
  "author": "Hadoku",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^6.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3"
  }
}
